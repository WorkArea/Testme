@model CMS.Models.Menu
           
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{ 
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Menu Name:</label>
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter menu name" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">
                Menu Url:
            </label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control", @placeholder = "Menu Url", @disabled = true })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-xs" value="Submit" />
        </div>
    </div>
}
